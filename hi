frappe.ui.form.on('Customer', {
    refresh(frm) {
        frm.add_custom_button('Ask Chatbot', () => {
            frappe.prompt([
                {
                    label: 'Your Question',
                    fieldname: 'prompt',
                    fieldtype: 'Small Text',
                    reqd: 1
                }
            ], (values) => {
                frappe.call({
                    method: 'chatbot_app.api.chat.chat_with_groq',
                    args: { prompt: values.prompt },
                    callback: function(r) {
                        frappe.msgprint({
                            title: 'Chatbot Says',
                            message: r.message,
                            indicator: 'blue'
                        });
                    }
                });
            });
        });
    }
});

